@{
    ViewData["Title"] = "Bidvest McCarthy Toyota";
    
    ViewData["ServiceTitle"] = "Bidvest McCarthy Toyota";
	ViewData["ServiceIcon"] = "logo-toyota";
	ViewData["ServiceCreate"] = "Feb 10, 2017 9:48 am";
}

<section class="section pri-gradient-darker">
	<div class="container text-white text-center">
		<a href="/my-services" class="btn btn-outline-light top-left-btn"><i class="fas fa-chevron-left"></i> My Services</a>
		<a href="/new-blend" class="btn btn-outline-light top-right-btn"><i class="icon-blender"></i> Blend Now</a>
		
		<div class="row">
			<div class="col">
				<i class="@ViewData["ServiceIcon"] fa-7x"></i>
				<div class="mb-4"><div class="badge badge-pill badge-secondary"><i class="fas fa-exclamation-circle"></i> Inactive</div></div>
				<h1 class="display-4 mt-4">@ViewData["ServiceTitle"]</h1>
				<div class="mb-4"><div class="badge badge-pill badge-transparent">Created @ViewData["ServiceCreate"]</div></div>
			</div>
		</div>
	</div>
</section>

<div class="container">
	<div class="row mb-4 shift-up">
		<div class="col-md-4">
			<div class="card">
				<div class="card-body text-center">
					<div class="display-2 text-primary">29</div>
					<h3 class="mb-0">Dealers</h3>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body text-center">
					<div class="display-2 text-primary">348</div>
					<h3 class="mb-0">Imported Stock</h3>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body text-center">
					<div class="display-2 text-primary">3</div>
					<h3 class="mb-0">Blends</h3>
				</div>
			</div>
		</div>
	</div>
	
	<div class="section pt-0">
		<div class="row mb-4">
			<div class="col mx-auto">
				
				<div class="tab-container">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home" role="tab">Activity</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#profile" role="tab">Details</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active fade show" id="home" role="tabpanel">
				
							<ul class="activity">
						
								<li>
									<div class="bg-danger"><i class="fas fa-plug fa-lg text-white"></i></div>
									<h3>Service disconnected</h3>
									<p>Dec 15, 2017 08:48 am</p>
									<span class="badge badge-danger">You do not have access rights to the content. Try the setup again and check your details.</span>
								</li>
								<li>
									<div><i class="fas fa-pencil-alt fa-lg"></i></div>
									<h3>Service edited</h3>
									<p>Dec 13, 2017 14:28 am</p>
								</li>
								<li>
									<div class="bg-success"><i class="fas fa-check fa-lg text-white"></i></div>
									<h3>Service connected</h3>
									<p>Dec 10, 2017 08:48 am</p>
								</li>
								<li>
									<div><i class="fas fa-comment-alt fa-lg"></i></div>
									<h3>Feed requested</h3>
									<p>Dec 11, 2017 10:32 am</p>
								</li>
								<li>
									<div class="bg-info"><i class="fas fa-plus fa-lg text-white"></i></div>
									<h3>Service created</h3>
									<p>Dec 9, 2017 10:28 am</p>
								</li>
							</ul>
						</div>
                        <div class="tab-pane fade" id="profile" role="tabpanel">
	                        
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script src="~/js/sweetalert2.min.js"></script>
	<script>
		 // Warning Message with function
        $('#switch-funtion').click(function(){
            swal({
                title: 'Are you sure?',
                text: 'You will not be able to recover this imaginary service!',
                type: 'warning',
                showCancelButton: true,
                buttonsStyling: false,
                confirmButtonClass: 'btn btn-danger',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonClass: 'btn btn-secondary'
            }).then(function(){
                swal({
                    title: 'Fine!',
                    text: 'You will not be able to recover this imaginary service!',
                    type: 'success',
                    buttonsStyling: false,
                    confirmButtonClass: 'btn btn-secondary'
                });
            });
        });
	</script>
}