@{
    ViewData["Title"] = "Service Name Here";
}

<section class="section pri-gradient-darker">
	<div class="container text-white text-center">
		<a href="/my-services" class="btn btn-outline-light top-left-btn"><i class="fas fa-chevron-left"></i> My Services</a>
		<a href="/search" class="btn btn-outline-light top-right-btn"><i class="fas fa-plus"></i> New Service</a>
		
		<div class="row">
			<div class="col">
				<i class="fab fa-freebsd fa-5x"></i>
				<h1 class="display-4 mt-4">@ViewData["Title"]</h1>
				<div class="mt-1 mb-4"><div class="badge badge-pill badge-transparent">Created Dec 15, 2017 08:48 am</div></div>
				
				<label class="switch" id="switch-funtion">
					<input type="checkbox" checked>
					<span class="slider round"></span>
				</label>
				
			</div>
		</div>
	</div>
</section>

<div class="container">
	<div class="row mb-4 shift-up">
		<div class="col-md-4">
			<div class="card">
				<div class="card-body text-center">
					<div class="display-2 text-primary">30</div>
					<h3 class="mb-0">Dealers</h3>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body text-center">
					<div class="display-2 text-primary">148</div>
					<h3 class="mb-0">Imported Stock</h3>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body text-center">
					<div class="display-2 text-primary">0</div>
					<h3 class="mb-0">Blends</h3>
				</div>
			</div>
		</div>
	</div>
	
	<div class="section">
		<div class="row mb-4">
			<div class="col-md-6 mx-auto">
				<h1 class="text-center mb-4">Service Activity</h1>
				<ul class="activity">
					<li>
						<div class="bg-success"><i class="fas fa-check fa-lg text-white"></i></div>
						<h3>Service connected</h3>
						<p>Dec 15, 2017 14:21 am</p>
					</li>
					<li>
						<div><i class="fas fa-comment-alt fa-lg"></i></div>
						<h3>Feed requested</h3>
						<p>Dec 15, 2017 10:32 am</p>
					</li>
					<li>
						<div class="bg-danger"><i class="fas fa-plug fa-lg text-white"></i></div>
						<h3>Service disconnected</h3>
						<p>Dec 15, 2017 08:48 am</p>
					</li>
					<li>
						<div><i class="fas fa-pencil-alt fa-lg"></i></div>
						<h3>Service edited</h3>
						<p>Dec 13, 2017 14:28 am</p>
					</li>
					<li>
						<div class="bg-success"><i class="fas fa-check fa-lg text-white"></i></div>
						<h3>Service connected</h3>
						<p>Dec 10, 2017 08:48 am</p>
					</li>
					<li>
						<div><i class="fas fa-comment-alt fa-lg"></i></div>
						<h3>Feed requested</h3>
						<p>Dec 11, 2017 10:32 am</p>
					</li>
					<li>
						<div class="bg-info"><i class="fas fa-plus fa-lg text-white"></i></div>
						<h3>Service created</h3>
						<p>Dec 9, 2017 10:28 am</p>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>


@section Scripts {
	<script src="~/js/sweetalert2.min.js"></script>
	<script>
		 // Warning Message with function
        $('#switch-funtion').click(function(){
            swal({
                title: 'Are you sure?',
                text: 'You will not be able to recover this imaginary service!',
                type: 'warning',
                showCancelButton: true,
                buttonsStyling: false,
                confirmButtonClass: 'btn btn-danger',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonClass: 'btn btn-secondary'
            }).then(function(){
                swal({
                    title: 'Fine!',
                    text: 'You will not be able to recover this imaginary service!',
                    type: 'success',
                    buttonsStyling: false,
                    confirmButtonClass: 'btn btn-secondary'
                });
            });
        });
	</script>
}