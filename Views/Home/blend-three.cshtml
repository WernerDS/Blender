@{
    ViewData["Title"] = "Cocktail Mix New";
}

<section class="section pri-gradient-darker my-blend">
	<div class="container text-white text-center">
		<a href="/my-blends" class="btn btn-outline-light top-left-btn"><i class="fa fa-chevron-left"></i> All Blends</a>
		<div class="row">
			<div class="col">
				<h1 class="display-4">@ViewData["Title"]</h1>
				<div class="mt-1"><div class="badge badge-pill badge-transparent">Created Dec 15, 2017 08:48 am</div></div>
				
				<div class="mixer on-color synced my-4">
					<div class="ingedient active">
						<i class="fab fa-grav fa-3x"></i>
						<h6>My Service Name</h6>
					</div>
					<div class="blade blade-left blade-right active">
						<i class="fas fa-clock fa-2x"></i>
					</div>
					<div class="ingedient active">
						<i class="fab fa-codepen fa-3x"></i>
						<h6>Other Service Name</h6>
					</div>
				</div>
				
				<label class="switch">
					<input type="checkbox" checked>
					<span class="slider round"></span>
				</label>
			</div>
		</div>
	</div>
</section>

