@section Scripts {
	<script src="~/js/shuffle.js"></script>
	<script>
		$(document).ready(function(){
		    $(".shuffle-table li").append(" <i class='fas fa-arrows-alt mx-2'></i>");
		}); 
	</script>
	<script>
		$('.switch').click( function() {
		    $('.ingedient').removeClass('active')
		    $('.blade').removeClass('active')
		    $('.blade').removeClass('blade-left')
		    $('.blade').removeClass('blade-right')
		});
	</script>
}