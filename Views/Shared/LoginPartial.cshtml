@using Microsoft.AspNetCore.Identity
@using blender.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<ul class="navbar-nav mx-auto">
		<li class="nav-item"><a class="nav-link" href="/discover">Discover</a></li>
		<li class="nav-item"><a class="nav-link" href="/search">Search</a></li>
		<li class="nav-item"><a class="nav-link" href="/services">Services</a></li>
		<li class="nav-item"><a class="nav-link" href="/my-blends">My Blends</a></li>
		<li class="nav-item"><a class="nav-link" href="/activity">Activity</a></li>
  	</ul>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
	    <ul class="navbar-nav">
			<li class="nav-item dropdown">
		        <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		          <img class="avatar" src="~/images/avatar.jpg"> @UserManager.GetUserName(User) <i class="fa fa-chevron-down"></i>
		        </a>
		        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
		          <a class="dropdown-item" href="/services">My Services</a>
		          <a class="dropdown-item" href="/my-blends">My Blends</a>
		          <a class="dropdown-item" href="#" onclick="document.getElementById('logoutForm').submit();">Sign Out</a>
		        </div>
		    </li>
	    </ul>
    </form>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a></li>
        <a class="btn btn-primary ml-2" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
    </ul>
}
